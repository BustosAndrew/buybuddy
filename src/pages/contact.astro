---
import { Icon } from "astro-icon";
import Layout from "@layouts/Layout.astro";
import Container from "@components/container.astro";
import Sectionhead from "@components/sectionhead.astro";
import Button from "@components/ui/button.astro";
import Contactform from "@components/contactform.astro";
---

<Layout title="Contact">
  <Container>
    <Sectionhead>
      <Fragment slot="title">Contact</Fragment>
      <Fragment slot="desc">We are a here to help.</Fragment>
    </Sectionhead>

    <div class="grid md:grid-cols-2 gap-10 mx-auto max-w-4xl mt-16">
      <div>
        <h2 class="font-medium text-2xl text-gray-800">
          Contact BuyBuddy team
        </h2>
        <p class="text-lg leading-relaxed text-slate-500 mt-3">
          Have something to say? We are here to help. Fill up the form to send
          us a message.
        </p>
        <div class="mt-5">
          <div class="flex items-center mt-2 space-x-2 text-gray-600">
            <Icon class="text-sky-950 w-4 h-4" name="uil:map-marker" />
            <span>USA & Australia</span>
          </div><div class="flex items-center mt-2 space-x-2 text-gray-600">
            <Icon class="text-sky-950 w-4 h-4" name="uil:envelope" /><a
              href="mailto:help@buybuddy.me">help@buybuddy.me</a
            >
          </div>
        </div>
        <h2 class="font-medium text-2xl text-gray-800 my-5">Our Socials</h2>
        <div class="text-center grid grid-cols-3">
          <a
            href="https://www.facebook.com/profile.php?id=100094498965632"
            class="p-2 w-12 h-12"><Icon name="ic:baseline-facebook" /></a
          >
          <a href="https://www.tiktok.com/@buybuddy.me" class="p-2 w-12 h-12"
            ><Icon name="ic:baseline-tiktok" /></a
          >
          <a href="https://www.instagram.com/buybuddyai/" class="p-2 w-12 h-12"
            ><Icon name="mdi:instagram" /></a
          >
          <a
            href="https://www.linkedin.com/company/buybuddyai/"
            class="p-2 w-12 h-12"><Icon name="mdi:linkedin" /></a
          >
          <a
            href="https://www.youtube.com/channel/UCfzrlfW3v7GbMB3Tn8059jA"
            class="p-2 w-12 h-12"><Icon name="mdi:youtube" /></a
          >
          <a href="https://twitter.com/BuyBuddyAI" class="p-2 w-12 h-12"
            ><Icon name="mdi:twitter" /></a
          >
        </div>
      </div>
      <div>
        <Contactform />
      </div>
    </div>
  </Container>
</Layout>
